{% extends 'base.html.twig' %}

{% block title %}Mis à jour Profil{% endblock %}

{% block body %}
<section class="relative bg-cover bg-center bg-no-repeat flex flex-col justify-between min-h-screen">
    <div class="absolute"></div>
    <div class="relative flex flex-col mx-auto w-screen justify-center items-center content-center self-start">
        <div class="w-auto rounded-lg shadow-lg dark:border sm:max-w-md xl:p-0 bg-transparent border border-amber-600 shadow-yellow-600 text- h-auto z-40 flex relative justify-center items-center content-center">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8 flex flex-col m-8 ">

               
                <h1 class="text-2xl font-bold text-center flex relative text-amber-600 justify-center font-sans">Mis à jour du Profil</h1>

               
                {{ form_start(monForm) }}
                 
                <div class="form-control w-full mb-4 text-amber-600 ">
                    {{ form_row(monForm.lastname, {
                        'attr': {
                            'class': 'input input-bordered bg-transparent w-full text-amber-600 border border-amber-600'
                        }
                    }) }}
                </div>

               
                <div class="form-control w-full mb-4 text-amber-600">
                    {{ form_row(monForm.firstname, {
                        'attr': {
                            'class': 'input input-bordered bg-transparent w-full text-amber-600 border border-amber-600'
                        }
                    }) }}
                </div>
                
                <div class="form-control w-full mb-4 text-amber-600">
                    {{ form_row(monForm.email, {
                        'attr': {
                            'class': 'input input-bordered bg-transparent w-full text-amber-600 border border-amber-600'
                        }
                    }) }}
                </div>
                <!-- Avatar Field -->
                <div class="form-control w-full mb-4 text-amber-600">
                    {{ form_row(monForm.avatarFile, {
                        'attr': {
                            'class': 'input input-bordered bg-transparent w-full text-amber-600 border border-amber-600'
                        }
                    }) }}
                </div>
                <br>
                
                <!-- Submit Button -->
                <button type="submit" class="font-mono font-bold bg-amber-600 w-full text-black bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 rounded-md text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 border border-zinc-600 mb-5">
                    {{ 'Apply changes'|trans }}
                </button>

                {{ form_end(monForm) }}
            </div>
        </div>

        <!-- Back to Profile Link -->
        <div class=" mt-16"">
            <a href="{{ path('app_account') }}" class="text-sm text-amber-600 hover:underline mt-16">
                ← Retour au profil
            </a>
        </div>
    </div>


    <!-- Footer -->


</section>
{% endblock %}
