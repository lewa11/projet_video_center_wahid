{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<section class="bg-transparent">
    <div class="flex flex-col items-center text px-6 py-8 mx-auto md:h-screen lg:py-0 w-screen">
        
        <div class="w-full rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 bg-transparent dark:border-gray-600 font-mono font-extrabold">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                
                <h1 class="text-center text-2xl font-bold text-gray-900 dark:text-white">Réinitialisez votre mot de passe</h1>
                <p class="text-center text-sm text-blue-400">
                    Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </p>

                {{ form_start(requestForm, {'attr': {'class': 'space-y-4 md:space-y-6'}}) }}
                    <div>
                        {{ form_label(requestForm.email, null, {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                        {{ form_widget(requestForm.email, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                        <div class="text-red-600"> 
                            {{ form_errors(requestForm.email) }}
                        </div>
                    </div>
                    <button type="submit" class="w-full text-white bg-gradient-to-r from-blue-500 via-blue-500 to-blue-700 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 border border-zinc-600">Confirmez</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
